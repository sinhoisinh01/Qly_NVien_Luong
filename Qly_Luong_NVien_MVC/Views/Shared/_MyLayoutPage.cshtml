<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/my-template/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/my-template/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/my-template/css/animate.min.css" rel="stylesheet" type="text/css" />
